#include <iostream>
using namespace std;
int main()
{
	int n, m = 0, a[100], b[100];
	setlocale(0, "");
  
	cout << "Введите размер массива" << endl;
	cin >> n;
  
	cout << "Введите массив" << endl;
	for (int i = 0; i < n; i++)
		cin >> a[i];  

	for (int i = 0; i < n; i++)
		if (a[i] % 2 == 0)
		{
			b[m] = a[i];
			m++;
		}
	cout << "a[i]= ";
	for (int i = 0; i < n; i++)
		cout << a[i] << " ";

	cout << endl;

	cout << "b[i]= ";
	for (int i = 0; i < m; i++)
		cout << b[i] << " ";

}
